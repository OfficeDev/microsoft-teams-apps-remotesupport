{
  "type": "AdaptiveCard",
  "body": [
    {
      "size": "large",
      "text": "_NewRequestTitle_",
      "type": "TextBlock",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "text": "_TellUsAboutProblemText_",
      "spacing": "Small"
    },
    {
      "type": "TextBlock",
      "text": "_TitleDisplayText_",
      "spacing": "Medium"
    },
    {
      "type": "Input.Text",
      "placeholder": "_TitlePlaceHolderText_",
      "id": "Title",
      "maxLength": 100,
      "spacing": "Small",
      "value": "_issueTitle_"
    },
    {
      "type": "TextBlock",
      "text": "_titleValidationText_",
      "spacing": "None",
      "isVisible": "_showTitleValidation_",
      "color": "Attention"
    },
    {
      "type": "TextBlock",
      "text": "_DescriptionText_",
      "spacing": "Medium"
    },
    {
      "type": "Input.Text",
      "placeholder": "_DesciptionPlaceHolderText_",
      "id": "Description",
      "isMultiline": true,
      "maxLength": 500,
      "spacing": "Small",
      "value": "_issueDescription_"
    },
    {
      "type": "TextBlock",
      "text": "_descriptionValidationText_",
      "spacing": "None",
      "isVisible": "_showDescriptionValidation_",
      "color": "Attention"
    },
    {
      "type": "TextBlock",
      "text": "_RequestTypeText_",
      "spacing": "Medium"
    },
    {
      "type": "Input.ChoiceSet",
      "style": "expanded",
      "spacing": "Small",
      "id": "RequestType",
      "choices": [
        {
          "title": "_NormalText_",
          "value": "Normal"
        },
        {
          "title": "_UrgentText_",
          "value": "Urgent"
        }
      ],
      "value": "_severity_"
    },
    _DynamicContent_,
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "_SendRequestButtonText_",
                  "id": "SendRequest",
                  "data": {
                    "msteams": {
                      "type": "messageBack",
                      "text": "Send request"
                    },
                    "CardId": "_cardId_",
                    "TeamId": "_teamId_"
                  }
                }
              ],
              "spacing": "Medium"
            }
          ]
        }
      ],
      "spacing": "Medium"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}